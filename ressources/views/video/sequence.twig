		</div>
		<div class="col-lg-4 align-self-center">
			{% if auth.level is same as('user') %}
				<div id="commentaire">
					<form class="form-group" method="POST" name="comment" action="../../commenter" autocomplete="off">
						<label class="col-form-label mr-3" for="message"><h3>Ecrivez votre commentaire</h3></label>
						<div class="form-inline">
							<input  class="form-control col-10" type="text" name="message" id="comm"/>
                            <button type="button" class="btn btn-dark" name="vocal" id='vocal'><i class="fas fa-microphone"></i></button>
						</div>
						<input type="hidden" name="idSequence" value="{{idSequence}}"/>
						<input type="hidden" name="idVideo" value="{{idVideo}}"/>
						<input class="btn btn-primary mt-3 float-right" type="submit" name="envoi" value="commenter"/>
					</form>
				</div>
			{% elseif auth.level is same as('searcher')  %}

					<table class="table mt-5">
						<thead class="thead-dark">
						<tr>
							<th scope="col">#</th>
							<th scope="col">Commentaire</th>
						</tr>
						</thead>
						<tbody id="lesComms">

						</tbody>
					</table>
			{% endif %}
		</div>



	</div>


{% endblock %}
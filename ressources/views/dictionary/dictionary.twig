{% extends "templates/app.twig" %}
{% block content %}
<a href="dictionary/new?type=object">Ajouter un objet</a>
<a href="dictionary/new?type=method">Ajouter une m√©thode</a>
<a href="dictionary/export">Exporter le dictionnaire</a>
<br/><br/>
<table border="1" style="border-collapse: collapse;" class="w-50">
{% for method in methods %}
	<tr><td>
	<a href="dictionary/{{method.id}}">{{ method.libelle }}(
		{% if method.parametre != null %}
		    {{ method.parametre }}
		{% endif %}
	)</a>
	<div class="float-right">
		<i class="fas fa-pen"></i>
		<i class="fas fa-trash"></i>
	</div>
	</td></tr>
{% endfor %}
</table>
<br/>
<table border="1" style="border-collapse: collapse;" class="w-50">
{% for object in objects %}
	<tr><td><a href="dictionary/{{object.id}}">{{ object.libelle }}</a>
	<div class="float-right">
		<i class="fas fa-pen"></i>
		<i class="fas fa-trash"></i>
	</div>
	</td></tr>
{% endfor %}
</table>
{% endblock %}
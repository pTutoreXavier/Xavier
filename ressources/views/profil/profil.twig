{% extends 'templates/app.twig' %}
{% block content %}
<h2 id="h2profil">Mon compte</h2>
<fieldset id="fieldsetMesInformations">
	<legend>Mes informations</legend>
	<div id="pictureAvatar">
		<img id="imgAvatar" src="../ressources/views/avatar/{{avatar}}">
		<a href='profil/updateProfilPicture'>Modifier</a>
	</div>
	<div id="divMesInformations">
		Nom : {{ nom }}<br />
		Prenom : {{ prenom }}<br />
		Date de naissance : {{ dateNaissance }}<br />
		Mail : {{ mail }}<br /><br />
		<a href='profil/updateMail'>Modifier Adresse email</a><br />
		<a href='profil/updatePass'>Modifier mot de passe</a><br />
	</div>
	

</fieldset><br /><br />
<fieldset id="fieldsetInfoCompte">
	<legend>Informations du compte</legend>
	Level d'acces : {{ level }}<br />
	Date d'inscription : {{ created_at }}
</fieldset>

	
{% endblock %}